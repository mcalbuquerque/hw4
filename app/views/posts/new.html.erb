<h1>New Post</h1>

<% if @current_user %>
  <%= form_with model: @post do |form| %>

    <div class="mb-3">
      <%= form.label "title", class: "form-label" %>
      <%= form.text_field "title", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label "description", class: "form-label" %>
      <%= form.text_field "description", class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label "posted_on", class: "form-label" %>
      <%= form.date_field "posted_on", class: "form-control" %>
    </div>

    <div class="mb-3>
      <%= form.label "uploaded_attachment", class: "form-label" %>
      <%= form.file_field "uploaded_attachment", accept: "image/jpg,image/jpeg,image/png", class: "form-control" %>
    </div>
    <%= form.submit "Create Post", class: "btn btn-primary" %>
    <%= form.hidden_field "place_id" %>
    
  <% end %>
<% else %>
  Please <a href="/sessions/new">login</a> first to post!
<% end %>