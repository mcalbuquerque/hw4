<h1><%= @place.name %></h1>

  <div class="row">
    <% for post in @place.posts %>
      <% if post.user_id == @current_user.id %>
        <div class="col-lg-4">
          <h4><%= post.title %></h4>
          <h5><%= post.posted_on %></h5>

          <% if post.uploaded_attachment.attached? %>
            <img src=<%= url_for(post.uploaded_attachment) %>"" class="img-fluid">
          <% end %>

          <p><%= post.description %></p>
        </div>
      <% end %>  
    <% end %>
  </div>

<p>
  <a href="/posts/new?place_id=<%= @place.id %>"class="btn btn-primary">New Post</a>
</p>

<p>
  <a href="/places" class="btn btn-success">Back to All Places</a>
</p>